@model CFSRemark.ViewModels.TabListComponentViewModel

@{ 
    var readonlyTag = "";
    if (!Model.isEditable)
    {
        readonlyTag = "readonly";
    }
}

<div class="form-group form-material" data-plugin="formMaterial">
    <label class="form-control-label" style="display:none">@Model.Label</label>
    <ul class="dynamiclist" data-field="@Model.Name" id="@Model.Name.ToLower()">
        <li class="floating firstli">
            <div class="input-group" style="display:inline-table">
                <div class="form-control-wrap">
                    <input type="hidden" data-field="@Model.LineId" />
                    <input type="text" style="display:inline;" class="form-control empty dynamictext" data-field="@Model.LineData" @readonlyTag/>
                    <label class="form-control-label floating-label">@Model.Label</label>
                </div>
                <span class="input-group-btn hidden">
                    <button class="btn btn-icon btn-danger md-delete" type="button"></button>
                </span>
            </div>
        </li>
    </ul>
</div>