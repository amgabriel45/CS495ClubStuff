@section scripts {
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jsgrid/1.5.3/jsgrid.min.js"></script>
    <script type="text/javascript" src="~/Content/site/jsgridHelper.js"></script>
    

    <script type="text/javascript">
        $(document).ready(function () {
            $("#statusFilter").select2();
            $("#mainModal").find(".combobox").select2({ dropdownParent: $("#mainModal") });
            $('#jsGrid').jsGrid("loadData");
            var params = {};
            var data = $.ajax({ type: "GET", url: "api/groups/", data: params }).then(
                function (arr) {
                    for (var i = 0; i < arr.length; i++) {
                        $("#Group").append( // Append an object to the inside of the select box
                            $("<option></option>") // Yes you can do this.
                                .text(arr[i].name)
                                .val(arr[i].id)
                        );
                    }
                    return arr;
                })
        });
       
        $("#jsGrid").jsGrid({
            width: "100%",

            inserting: false,
            editing: false,
            sorting: true,
            paging: true,

            controller: {
                loadData: function () {
                    var params = {};
                    var data = $.ajax({ type: "GET", url: "api/clubs/", data: params }).then(
                        function (arr) {
                            return arr;
                        })
                    return data;
                }
            },

            fields: [
                { name: "name", title: "Name", type: "text", width: 150, align: "center" },
                { name: "groupName", type: "text", title: "Group", align: "center" },
                { name: "Id", visible: false },
                {
                    type: "control", width: 65,
                    itemTemplate: function (value, item) {
                        var $result = jsGrid.fields.control.prototype.itemTemplate.apply(this, arguments);

                        var $customButton = $("<i class=\"site-menu-icon md-calendar\" aria-hidden=\"true\"></i>")
                            .click(function (e) {
                                $('#deleteButton').show();
                                $("#saveNewButton").hide();
                                $("#saveButton").show();
                                var params = {};
                                var events = [];
                                var $data = $.ajax({
                                    type: "GET", url: "api/clubs/" + item.id + "/calendar", data: params
                                }).then(
                                    function (arr) {
                                        for (var i = 0; i < arr.length; i++) { events.push({ title: arr[i].name, start: arr[i].start, end: arr[i].finish, description: arr[i].description }) }
                                        $('#calendar').fullCalendar('destroy');
                                        $('#calendar').fullCalendar('today');
                                        var myCalendar = $('#calendar');
                                        myCalendar.fullCalendar({
                                            defaultView: 'month',
                                           // defaultDate: '2018-03-12',
                                            contentHeight: 400,
                                            eventColor: '#9E1B32',
                                            eventTextColor: '#FFFFFF',
                                            eventRender: function (eventObj, $el) {
                                                $el.popover({
                                                    title: eventObj.title,
                                                    content: eventObj.description,
                                                    trigger: 'hover',
                                                    placement: 'top',
                                                    container: 'body'
                                                });
                                            },
                                            events: events
                                        });
                                        return arr;
                                    });
                                $('#mainModal').modal('toggle');
                                $('#ClubName').removeClass('empty');
                                $('#ClubName').val(item.name);
                                $('#Description').removeClass('empty');
                                $('#Description').val(item.description);
                                $('#ClubId').val(item.id);
                                $('#Group').val(item.groupId);
                                $('#Group').change();
                            });

                        return $customButton;
                    }
                }
            ],
            autoload: true
           
        });

        $("#createButton").click(function () {
            $('#calendar').fullCalendar('destroy');
            $("#saveNewButton").show();
            $("#saveButton").hide();
            $('#ClubName').addClass('empty');
            $('#ClubName').val('');
            $('#Description').addClass('empty');
            $('#Description').val('');
            $('#Group').val('');
            $('#Group').change();
            $('#deleteButton').hide();
            $('#mainModal').modal('toggle');
        });

        $("#deleteButton").click(function () {
            var params = {};
            var id = $('#ClubId').val();
            var data = $.ajax({ type: "DELETE", url: "api/clubs/" + id , data: params }).then(
                function (arr) {
                    $('#mainModal').modal('toggle');
                    $('#jsGrid').jsGrid("loadData");
                    return arr;
                });
        });

        $("#saveNewButton").click(function () {
            var params = {};
            params["name"] = $("#ClubName").val();
            params["description"] = $("#Description").val();
            params["isRequestToJoin"] = true;
            params["groupId"] = $("#Group").val();
            var $data = $.ajax({
                type: "POST", url: "api/clubs/", data: params
            }).then(
                function (arr) {
                    
                    return arr;
                });
            $('#mainModal').modal('toggle');

            location.reload();
            //$('#jsGrid').jsGrid("loadData");
        });
        $("#saveButton").click(function () {
            var params = {};
            params["id"] = $("#ClubId").val();
            params["name"] = $("#ClubName").val();
            params["description"] = $("#Description").val();
            params["groupId"] = $("#Group").val();

            var $data = $.ajax({
                type: "PUT", url: "api/clubs/", data: params
            }).then(
                function (arr) {

                    return arr;
                });
            $('#mainModal').modal('toggle');
            $('#jsGrid').jsGrid("loadData");
        });

        $("#cancelButton").click(function () {
            $('#calendar').fullCalendar('destroy');
            $('#mainModal').modal('toggle');
        });


    </script>
}